package funciones;

/**
 *
 * @author Administrador
 */
public class Funciones {
  
    public double metodoPi(int numTerm)
    {
        double termino, sumaPi=0;
        double signo =1;
        for(double i = 1; i< numTerm; i= i+2)
        {
            termino = 4/i;
            sumaPi =  sumaPi + termino * signo;
            signo *= -1;
        }
        return sumaPi;
    
    
    }
    
}
